<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <inset android:insetLeft="@dimen/default_button_inset" android:insetTop="@dimen/default_button_inset" android:insetRight="@dimen/default_button_inset" android:insetBottom="@dimen/default_button_inset">
            <shape android:shape="rectangle">
                <solid android:color="@color/green" />
                <stroke android:width="@dimen/default_stroke" android:color="@color/white" />
                <padding android:bottom="@dimen/default_button_padding" android:top="@dimen/default_button_padding" />
            </shape>
        </inset>
    </item>
    <item>
        <inset android:insetLeft="@dimen/default_button_inset" android:insetTop="@dimen/default_button_inset" android:insetRight="@dimen/default_button_inset" android:insetBottom="@dimen/default_button_inset">
            <shape android:shape="rectangle">
                <size android:height="@dimen/default_switch_shape_size"/>
                <stroke android:width="@dimen/default_stroke" android:color="@color/white" />
                <gradient android:endColor="@color/darken" android:startColor="@color/darken" />
            </shape>
        </inset>
    </item>
</selector>
